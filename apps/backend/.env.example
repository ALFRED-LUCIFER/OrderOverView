# Environment variables declared in this file are available at build-time and run-time.
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL="your_database_connection_string_here"

# Application settings
PORT=3001
NODE_ENV=development

# Voice & AI Integration - Phase 3, 4, 5 Implementation
OPENAI_API_KEY="your_openai_api_key_here"
DEEPGRAM_API_KEY="your_deepgram_api_key_here"  
ANTHROPIC_API_KEY="your_anthropic_api_key_here"
ENABLE_VOICE_FEATURES=true
VOICE_SESSION_TIMEOUT=300000

# STT (Speech-to-Text) Provider Configuration
PREFERRED_STT_PROVIDER="auto"  # auto, whisper, deepgram
STT_CONFIDENCE_THRESHOLD=0.7

# Intent Detection Configuration  
PREFERRED_INTENT_PROVIDER="ensemble"  # openai, anthropic, ensemble
INTENT_CONFIDENCE_THRESHOLD=0.8

# Natural Voice Configuration
ENABLE_CONTINUOUS_LISTENING=true
VOICE_ACTIVITY_THRESHOLD=0.3
SILENCE_TIMEOUT_MS=1500
MAX_CONVERSATION_LENGTH=30
INTERRUPT_THRESHOLD=0.5

# AI Configuration - ENHANCED FOR NATURAL VOICE INTERFACE
AI_RESPONSE_STYLE="conversational_natural"
ENABLE_FILLER_WORDS=true
ENABLE_THINKING_SOUNDS=true
ENABLE_CONVERSATION_MODE=true
ENABLE_REAL_VOICE_INTERFACE=true

# ElevenLabs Configuration for Natural AI Voice
ELEVENLABS_API_KEY="your_elevenlabs_api_key_here"
ELEVENLABS_VOICE_ID="SAz9YHcvj6GT2YYXdXww"  # Bella - Professional female voice
ELEVENLABS_MODEL_ID="eleven_monolingual_v2"
VOICE_STABILITY=0.75
VOICE_SIMILARITY_BOOST=0.75
VOICE_STYLE=0.2

# PDF Generation  
PDF_STORAGE_PATH="./temp/pdfs"
PDF_CLEANUP_INTERVAL=3600000

# WebSocket & CORS
CLIENT_URL="http://localhost:5173"

# Mailer Sender API Configuration  
MAILERSEND_API_TOKEN="your_mailersend_api_token_here"
