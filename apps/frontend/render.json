{
  "version": 2,
  "name": "glass-order-frontend",
  "type": "static",
  "buildCommand": "cd apps/frontend && pnpm install && pnpm run build",
  "publishDirectory": "apps/frontend/dist",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://your-backend-url.onrender.com",
    "VITE_WEBSOCKET_URL": "wss://your-backend-url.onrender.com",
    "VITE_ENABLE_VOICE": "true"
  }
}
